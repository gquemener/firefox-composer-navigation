{
    "manifest_version": 2,
    "name": "Github Composer Navigator",
    "version": "1.0",
    "description": "Navigate to dependency repository while reading a composer.json on Github",
    "icons": {
        "48": "icons/link.svg",
        "96": "icons/link.svg"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*/composer.json"],
            "js": ["composer.js"]
        }
    ],
    "permissions": [
        "https://packagist.org/*"
    ]
}
